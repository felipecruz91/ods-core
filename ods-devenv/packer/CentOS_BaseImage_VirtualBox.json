{
    "variables": {
        "version": ""
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "http_directory": "ods-devenv/packer",
            "boot_command": [
                "<tab><wait>",
                " ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.cfg<enter>"
            ],
            "iso_urls": [
                "CentOS-7-x86_64-DVD-2003.iso",
                "http://mirrors.mit.edu/centos/7/isos/x86_64/CentOS-7-x86_64-DVD-2003.iso"
            ],
            "iso_checksum": "sha256:087a5743dc6fd6706d9b961b8147423ddc029451b938364c760d75440eb7be14",
            "disk_size": 100000,
            "guest_os_type": "RedHat_64",
            "cpus": 4,
            "memory": 8192,
            "ssh_username": "openshift",
            "ssh_password": "openshift",
            "ssh_port": 22,
            "ssh_timeout": "30m",
            "shutdown_command": "echo openshift | sudo -S shutdown --poweroff now",
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "virtualbox_version_file": ".vbox_version"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "whoami",
                "pwd",
                "mkdir -p bin",
                "mkdir -p tmp",
                "touch bin/bootstrap",
                "chmod u+x bin/bootstrap"
            ]
        },
        {
            "type": "file",
            "source": "ods-devenv/scripts/bootstrap.sh",
            "destination": "/home/openshift/bin/bootstrap"
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant",
                "output": "builds/{{.Provider}}-centos7.box"
            }
        ]
    ]
}